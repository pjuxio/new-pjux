          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm">
              <!-- Embed the video -->
              <div class="ratio ratio-16x9">
                <iframe 
                  src="<%= video.source.replace('watch?v=', 'embed/') %>" 
                  title="<%= video.title %>" 
                  allowfullscreen>
                </iframe>
              </div>
              <div class="card-body">
                <h3 class="card-title"><a href="<%= video.source %>"><%= video.title %></a></h3>
                <p class="card-text"><%= video.description %></p>
              </div>
            </div>
          </div>
        <% }); %>

<section class="services-cta p-4 p-sm-5 text-center">
    <div class="container">
      <h2 class="mb-4 text-white" >Let's turn your ideas into reality</h2>
      <div class="row">
        <% featuredservicesContent.forEach(service => { %>
          <div class="col-lg-4 col-md-12">
            <div class="service-card p-3 p-sm-4">
              <i class="<%= service.icon %> fa-3x mb-4"></i>
              <h3 class="display-7 display-sm-8"><%= service.title %></h3>
              <p class="text-white"><%= service.description %></p>
            </div>
          </div>
        <% }); %>
      </div>
    <div class="m-2 m-sm-4">
        <a href="/services" class="btn btn-new">Our Services</a>
    </div>
    </div>
  </section>